<Page
    x:Class="Proyecto1.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Proyecto1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <SplitView  Name="splitView1" 
                DisplayMode="CompactOverlay"  
                IsPaneOpen="False" 
                CompactPaneLength="50" 
                OpenPaneLength="200" RenderTransformOrigin="0.492,0.502">
        <SplitView.Pane>
            <StackPanel Background="LightGray">
                <Button Name="botonMenu" 
                        FontFamily="Segoe MDL2 Assets" 
                        Content="&#xE700;"
                        Width="50" 
                        Height="50" 
                        Background="Transparent"
                        Click="botonMenu_Click"
                        />
                
                <StackPanel Orientation="Horizontal">
                    <Button Name="boton1" 
                            FontFamily="Segoe MDL2 Assets" 
                            Content="&#xE825;"
                            Width="50" 
                            Height="50" 
                            Background="Transparent" 
                            Click="button1_Click"
                            />
                    <TextBlock Text="Descripción 1" 
                               FontSize="18" 
                               VerticalAlignment="Center" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Button Name="button2" 
                            FontFamily="Segoe MDL2 Assets" 
                            Content="&#xE11A;"
                            Width="50"
                            Height="50" 
                            Background="Transparent" 
                            Click="button2_Click"
                            />
                    <TextBlock Text="Descripción 2"
                               FontSize="18"
                               VerticalAlignment="Center"  />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Button Name="button3" 
                            FontFamily="Segoe MDL2 Assets"
                            Content="&#xE115;"
                            Width="50" 
                            Height="50"
                            Background="Transparent"
                            Click="button3_Click"
                            />
                    <TextBlock Text="Descripción 3"
                               FontSize="18"
                               VerticalAlignment="Center" />
                </StackPanel>
            </StackPanel>
        </SplitView.Pane>
        <SplitView.Content>
            <Frame Name="frame1"/>
        </SplitView.Content>
    </SplitView>
</Page>
